using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _11L_
{
    class Program
    {      

        static void Main(string[] args)
        {
            Cliente c;
            //Restaurante r = new Restaurante();
            //Requisucao r1 = new Requisucao();

            string nome = "";
            int id = 1;

            while (nome.Length <= 3)
            {
                Console.WriteLine("Informe o nome");
                nome = Console.ReadLine();
                nome.Trim();
                Console.WriteLine();

                if (nome.Length > 3)
                {
                    c = new Cliente(nome,id);                   
                }
            }

            Console.ReadLine();
        }
    }
}
